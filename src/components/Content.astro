        background-color: color-mix(in srgb, #1E1F22 50%, #3574F0 50%);
    }

    .implied {
        background-color: rgba(53, 115, 240, 0.25);
    }

    .filterButton span, #totalAmount {
        font-size: 0.7rem !important;
        position: relative;
        top: 1px;
        font-weight: 600;
        opacity: 0.5;
