<script>

    let gridDefault = document.getElementById('gridDefault');
    let gridLarge = document.getElementById('gridLarge');
    let buttons = document.querySelectorAll('.gridButton');
    let grid = document.getElementById('contentWrap');

    for(const btn of buttons) {
        btn.addEventListener('click', () => {
            if(gridLarge.classList.contains('active')) {
                gridDefault.classList.add('active', 'popper')
                gridLarge.classList.remove('active', 'popper')
                grid.classList.remove('gridLarge');
                grid.classList.add('gridDef');
            } else if(!gridLarge.classList.contains('active')) {
                gridDefault.classList.remove('active', 'popper')
                gridLarge.classList.add('active', 'popper')
                grid.classList.add('gridLarge');
                grid.classList.remove('gridDef');
            }
        })
    }


</script>

<div>
    <button class="gridButton">
        <svg id="gridDefault" class="active" data-slot="icon" aria-hidden="true" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
