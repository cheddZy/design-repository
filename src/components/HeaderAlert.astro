---
import '../styles/styles.scss'
import '../styles/globals.scss'
---


<script>
    const alertBox = document.getElementById('alertBox');
    const alertDismiss = document.getElementById('alertDismiss');
    const alertContainer = document.getElementById('alertContainer')

    alertDismiss.addEventListener('click', () => {
        alertBox.style.opacity = '0';
        alertContainer.style.top = '-2rem';
        setTimeout(function() {
            alertBox.style.display = 'none';
        }, 300)
        localStorage.setItem('alertBox', 'dismissed');
    })


</script>

<div id="alertContainer">
    <div id="alertBox" class="alertBox">
        <p>

            <svg data-slot="icon" aria-hidden="true" fill="currentColor" viewBox="0 0 24 24"
                 xmlns="http://www.w3.org/2000/svg">
                <path clip-rule="evenodd"
                      d="M9 4.5a.75.75 0 0 1 .721.544l.813 2.846a3.75 3.75 0 0 0 2.576 2.576l2.846.813a.75.75 0 0 1 0 1.442l-2.846.813a3.75 3.75 0 0 0-2.576 2.576l-.813 2.846a.75.75 0 0 1-1.442 0l-.813-2.846a3.75 3.75 0 0 0-2.576-2.576l-2.846-.813a.75.75 0 0 1 0-1.442l2.846-.813A3.75 3.75 0 0 0 7.466 7.89l.813-2.846A.75.75 0 0 1 9 4.5ZM18 1.5a.75.75 0 0 1 .728.568l.258 1.036c.236.94.97 1.674 1.91 1.91l1.036.258a.75.75 0 0 1 0 1.456l-1.036.258c-.94.236-1.674.97-1.91 1.91l-.258 1.036a.75.75 0 0 1-1.456 0l-.258-1.036a2.625 2.625 0 0 0-1.91-1.91l-1.036-.258a.75.75 0 0 1 0-1.456l1.036-.258a2.625 2.625 0 0 0 1.91-1.91l.258-1.036A.75.75 0 0 1 18 1.5ZM16.5 15a.75.75 0 0 1 .712.513l.394 1.183c.15.447.5.799.948.948l1.183.395a.75.75 0 0 1 0 1.422l-1.183.395c-.447.15-.799.5-.948.948l-.395 1.183a.75.75 0 0 1-1.422 0l-.395-1.183a1.5 1.5 0 0 0-.948-.948l-1.183-.395a.75.75 0 0 1 0-1.422l1.183-.395c.447-.15.799-.5.948-.948l.395-1.183A.75.75 0 0 1 16.5 15Z"
                      fill-rule="evenodd"></path>
            </svg>
            This site is under construction!
            <span><a href="https://github.com/cheddZy/design-repository" target="_blank">Github Page</a></span>
        </p>
        <button id="alertDismiss">
            <svg data-slot="icon" aria-hidden="true" fill="currentColor" viewBox="0 0 24 24"
                 xmlns="http://www.w3.org/2000/svg">
                <path clip-rule="evenodd"
                      d="M5.47 5.47a.75.75 0 0 1 1.06 0L12 10.94l5.47-5.47a.75.75 0 1 1 1.06 1.06L13.06 12l5.47 5.47a.75.75 0 1 1-1.06 1.06L12 13.06l-5.47 5.47a.75.75 0 0 1-1.06-1.06L10.94 12 5.47 6.53a.75.75 0 0 1 0-1.06Z"
                      fill-rule="evenodd"></path>
            </svg>
        </button>
    </div>
</div>


<style>

    #alertContainer {
        top: 5rem;
        position: absolute;
        left: 0;
        right: 0;
        margin-left: auto;
        margin-right: auto;
        max-width: 1100px;
        @apply transition-all;
        @apply duration-300;
        transition-timing-function: ease-in;

        z-index: 1;

    }

    a {
        text-underline: rgb(9, 32, 128);
        text-decoration: underline;
    }
    a::after {
        content: ' ->';
    }
    svg {
        height: 1.5rem;
        color: rgba(19, 55, 204, 1);
    }
    p {
        display: flex;
        flex-direction: row;
        gap: 0.5rem;
        align-items: center;
    }

    .alertBox {
        @apply px-3;
        @apply py-2;
        @apply rounded-xl;
        @apply transition-all;
        opacity: 1;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        margin-inline: 6%;

        border: solid 1px #3574F0;
        background-color: rgba(62, 96, 238, 0.2);
    }

    p {
        font-size: 0.8rem !important;
    }

</style>