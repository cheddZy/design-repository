---

import '../../styles/styles.scss'
import '../../styles/globals.scss'
const { target, label } = Astro.props;
---

<script>
    const button = document.getElementById('loginButton')

    button.addEventListener('click', () => {

    })
</script>

<button id="loginButton" type="button" aria-label={label}>
    <a href='/' target={target}>

        Log In
    </a>
</button>


<style>

    button {
        display: flex;
    }

    a {
        @apply px-4;
        @apply py-[0.5rem];
        @apply rounded-full;
        @apply transition-all;
        @apply duration-100;
        font-size: 0.9rem;
        background: transparent;
        border: 2px rgba(87, 90, 102, 0.2) solid;

    }
    a:hover {
        color: #3574F0;
        border: 2px #96aee0 solid;
    }
    a:active {
        color: #3574F0;
        border: 2px #3574F0 solid;
    }

</style>