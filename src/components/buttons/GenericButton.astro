---

import '../../styles/styles.scss'
import '../../styles/globals.scss'
const { buttonText, href, target, label } = Astro.props;
---


<button type="button" aria-label={label}>
    <a href={href} target={target}>

        { buttonText }
    </a>
</button>


<style>

    button {
        display: flex;
    }

    a {
        @apply px-3;
        @apply py-1;
        @apply rounded-full;
        @apply transition-colors;
        @apply duration-100;

        font-size: 0.9rem;
        border: 1px transparent solid;
    }
    a:hover {
        background: linear-gradient(rgba(87, 90, 102, 0.1), transparent);
        border: 1px rgba(87, 90, 102, 0.2) solid;
    }

</style>